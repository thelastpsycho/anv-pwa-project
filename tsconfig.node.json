{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "cypress.config.*",
    "nightwatch.config.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  }
}
